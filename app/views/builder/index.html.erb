<style>
    .row {
        margin-top: 20px;
    }
    .preview-wrapper {
        padding: 5px;
        background-color: #333;
    }
    iframe {
        width: 100%;
        min-height: 500px;
        border-width: 0;
        outline: 0;
        background-color: #EEE;
    }
</style>
<div class="row">
    <div class="col-sm-7">
        <div class="preview-wrapper">
            <iframe src="<%= builder_view_path %>"></iframe>
        </div>
    </div>
    <div class="col-sm-5">
        <%= form_tag(sections_path, { class: 'form-horizontal' }) do %>
            <select name="section_type_id">
                <% @sectionTypes.each do |type| %>
                    <option value="<%= type.id %>"><%= type.name %></option>
                <% end %>
            </select>
            <button type="submit">Add Section</button>
        <% end %>
        <hr>
        <% @sections.each do |section| %>
            <div><%= section.section_type.name %></div>
        <% end %>
        <% @sections.each do |section| %>
            <%= form_tag(section_path(section), { class: 'form-horizontal' }) do %>
                <% section.section_type.section_fields.each do |field| %>
                    <%= render "partials/#{field.field_table_name}", field: field %>
                <% end %>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Update</button>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
